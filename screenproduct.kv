#:kivy 1.10.0

<ScreenProduct>:
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,.25
            TextInput:
                id: query
                size_hint: 5,1
                text: ''
                hint_text: 'Input BarCode or Product Name'
                font_size: 30
                multiline: False
                on_text_validate: root.ids.rv.upload(root.ids.query.text, root.ids.raw.active)
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Raw Food Item'
                CheckBox:
                    id: raw
                    active: False
                
        GridLayout:
            size_hint: 1,.15
            cols:3
            rows:1
            Label:
                text: 'Code'
                font_size: 25
                size_hint: .25,1
            Label:
                text: 'Product'
                font_size: 25
                size_hint: .5, 1
            Label:
                text: 'Brand'
                font_size: 25
                size_hint: .25,1

        RV:
            id: rv
            viewclass: 'SelectableGrid'
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,.25
            Button:
                text: 'Back'
                on_press: root.manager.current = 'Home Screen'
            
            Button:
                text: 'Remove'
                on_press: root.manager.deleteProduct()

            Button:
                text: 'Add'
                on_press: root.manager.addProduct()

            Button:
                text: 'Validate'
                on_press: root.manager.current = 'Quantities Screen'