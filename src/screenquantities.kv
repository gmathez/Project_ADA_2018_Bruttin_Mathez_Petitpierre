#:kivy 1.10.0

# Kivy file for the Quantities Screen

<ScreenQuantities>: 
    BoxLayout:
        orientation: 'vertical'
        
        GridLayout: # Grid of Labels for the description of the columns
            size_hint: 1,.15
            cols:3
            rows:1
            Label:
                text: 'Code'
                font_size: 25
                size_hint: .25,1
            Label:
                text: 'Product'
                font_size: 25
                size_hint: .5, 1
            Label:
                text: 'Quantity [g] or [ml]'
                font_size: 25
                size_hint: .25,1
        RV:
            id: rv
            viewclass: 'SelectableQuantity'  # Select the SelectableQuantity class
        
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,.25

            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'bottom'

                Button:
                    id: back
                    size_hint: .5, 1
                    text: 'Back'
                    font_size: 25
                    on_press: root.manager.current = 'Product Screen'

            AnchorLayout:
                anchor_x: 'right'
                anchor_y: 'bottom'

                Button:
                    size_hint: .5, 1
                    text: 'Validate'
                    font_size: 25
                    on_press: root.manager.getQuantities(root.temp_dict)