#:kivy 1.10.0

# Kivy file for the Final Screen

<ScreenFinal>:
    BoxLayout:
        orientation: 'vertical'

        Label:
            text: 'Results'
            font_size: 40

        Label:
            id: beverages
            text: ''
            font_size: 30

        Label:
            id: non_beverages
            text: ''
            font_size: 30

        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1,.25

            AnchorLayout:
                anchor_x: 'left'
                anchor_y: 'bottom'

                Button:
                    id: back
                    size_hint: .5, 1
                    text: 'Back'
                    font_size: 25
                    on_press: root.manager.current = 'Settings Screen'